            </tr>
        </thead>
        <tbody class="text-dark">
            @foreach (var item in Model)
            {
                <tr class="table-secondary">
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCursos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NroHoras)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioCurso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdEmpleados)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdCursos }) |
                        @Html.ActionLink("Details", "Details", new { id = item.IdCursos }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdCursos })
                    </td>
                </tr>
            }
        </tbody>
    </table>

